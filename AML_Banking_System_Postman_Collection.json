{
  "info": {
    "name": "AML Banking System API Collection",
    "description": "Comprehensive API collection for Anti-Money Laundering Banking System with automatic JWT token handling",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Auto-extract JWT token from login response",
          "if (pm.response && pm.response.json() && pm.response.json().token) {",
          "    pm.environment.set('jwt_token', pm.response.json().token);",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.environment.set('jwt_token', response.token);",
                  "        console.log('JWT token saved:', response.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"usernameOrEmail\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "üë§ Registration",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/register/send-otp?email=test@example.com",
              "host": ["{{base_url}}"],
              "path": ["api", "register", "send-otp"],
              "query": [
                {
                  "key": "email",
                  "value": "test@example.com"
                }
              ]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/register/verify-otp?email=test@example.com&otp=123456",
              "host": ["{{base_url}}"],
              "path": ["api", "register", "verify-otp"],
              "query": [
                {
                  "key": "email",
                  "value": "test@example.com"
                },
                {
                  "key": "otp",
                  "value": "123456"
                }
              ]
            }
          }
        },
        {
          "name": "Register Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"username\": \"johndoe\",\n  \"password\": \"SecurePass123!\",\n  \"phone\": \"+1234567890\",\n  \"dob\": \"1990-01-15\",\n  \"address\": {\n    \"street\": \"123 Main Street\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"country\": \"United States\",\n    \"postalCode\": \"10001\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/register",
              "host": ["{{base_url}}"],
              "path": ["api", "register"]
            }
          }
        },
        {
          "name": "Upload Documents",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "docType",
                  "value": "PASSPORT",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/register/1/documents",
              "host": ["{{base_url}}"],
              "path": ["api", "register", "1", "documents"]
            }
          }
        }
      ]
    },
    {
      "name": "üè¶ Bank Accounts",
      "item": [
        {
          "name": "Create Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountType\": \"SAVINGS\",\n  \"currency\": \"USD\",\n  \"initialDeposit\": 1000.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/accounts",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts"]
            }
          }
        },
        {
          "name": "Get My Accounts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/accounts",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts"]
            }
          }
        }
      ]
    },
